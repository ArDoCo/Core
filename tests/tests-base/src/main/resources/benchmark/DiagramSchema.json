{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "diagrams": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/diagram"
            }
        }
    },
    "definitions": {
        "diagram": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "boxes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/box"
                    }
                }
            },
            "required": [
                "path",
                "boxes"
            ]
        },
        "box": {
            "type": "object",
            "properties": {
                "boundingBox": {
                    "$ref": "#/definitions/boundingBox"
                },
                "textBoxes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "text": {
                                "type": "string"
                            },
                            "boundingBox": {
                                "$ref": "#/definitions/boundingBox"
                            }
                        },
                        "required": [
                            "text",
                            "boundingBox"
                        ]
                    }
                },
                "subBoxes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/box"
                    }
                },
                "tracelinks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/text"
                    }
                }
            },
            "required": [
                "boundingBox",
                "textBoxes",
                "subBoxes",
                "tracelinks"
            ]
        },
        "text": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "sentences": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "typedTracelinks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/typedTracelinks"
                    }
                }
            },
            "required": [
                "name",
                "sentences"
            ]
        },
        "boundingBox": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                },
                "w": {
                    "type": "integer"
                },
                "h": {
                    "type": "integer"
                }
            },
            "required": [
                "x",
                "y",
                "w",
                "h"
            ]
        },
        "typedTracelinks": {
            "type": "object",
            "properties": {
                "sentences": {
                    "type": "array"
                },
                "traceType": {
                    "type": "string",
                    "enum": [
                        "ENTITY",
                        "COMMON_NOUN",
                        "SHARED_STEM",
                        "ENTITY_COREFERENCE",
                        "OTHER_ENTITY",
                        "UNCERTAIN"
                    ]
                }
            },
            "required": [
                "sentences",
                "traceType"
            ]
        }
    },
    "required": [
        "diagrams"
    ]
}
